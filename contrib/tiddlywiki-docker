#!/usr/bin/env bash

[[ -n $DEBUG ]] && set -o xtrace

readonly TIDDLYWIKI_VERSION="${TIDDLYWIKI_VERSION:-latest}"

docker run --interactive --tty --rm \
	--name tiddlywiki \
	--publish 8080:8080 \
	--mount "type=bind,source=${PWD},target=/tiddlywiki" \
	--user "$(id -u):$(id -g)" \
	"elasticdog/tiddlywiki:${TIDDLYWIKI_VERSION}" \
	"$@"
